<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WebApp - Reminder Page</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

  <link href="css/style.css" rel="stylesheet">
</head>

<body>

  {{> navbar}}
  <h1 align="center">Reminders</h1>

  {{> message}}
  {{> validation_errors}}

<div class="container">
    <form method="POST" action="/reminder/submitNewReminder/">
                        <div class="row">
                            <div class="col-sm-6 col-lg-6 input-group mb-3">
                                  <input name="reminderDate" type="date" class="form-control" placeholder="date"></input>
                                  <div class="input-group-append">
                                    <span class="input-group-text">Date</span>
                                  </div>
                           </div>
                           <div class="col-sm-6 col-lg-6 input-group mb-3">
                                 <input name="reminderTime" type="time" class="form-control" placeholder="time"></input>
                                 <div class="input-group-append">
                                   <span class="input-group-text">Time</span>
                                 </div>
                          </div>
                      </div>
                            <div class="input-group mb-3">
                                  <input name="reminderEmail" type="email" class="form-control" placeholder="email"></input>
                                  <div class="input-group-append">
                                    <span class="input-group-text">Email</span>
                                  </div>
                           </div>
                            <div class="input-group mb-3">
                                  <input Name="reminderSubject" type="text" class="form-control" placeholder="text"></input>
                                  <div class="input-group-append">
                                    <span class="input-group-text">Reminder Subject</span>
                                  </div>
                           </div>
                           <div class="input-group mb-3">
                                 <input name="reminderText" type="text" class="form-control" placeholder="text"></input>
                                 <div class="input-group-append">
                                   <span class="input-group-text">Reminder Text</span>
                                 </div>
                          </div>
                          <button type="submit" class="btn btn-primary" style="background-color: #337ab7; border-color: #337ab7">Submit</button>
                        </form>

</div>
<div class="container">
  {{> existingReminders}}
</div>



<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<script>
      function deleteReminder(index){
           fetch('http://localhost:5000/reminder/deleteReminder/'+index, {
                        method: 'get',
                        redirect: 'follow',
                        headers: {'Content-Type': 'application/json'},
                        })
          .then(res => {
          console.log("Reminder with index no "+index+" deleted from DB")
          window.location.pathname = '/reminder/getReminders-D/'
           })
                                    }

    //REMOVES ALERT MESSAGE AFTER # SECONDS
      window.addEventListener('DOMContentLoaded', (event) => {
        let alert = document.querySelector('.alert')
        if (alert){
          setTimeout(()=>document.querySelector('.alert').remove(),
          3000);
        }
        });

</script>
</body>

</html>
