{{#if messages.success}}
<div style="padding: 20px">
  <div class="alert alert-success" role="alert">
    {{messages.success}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
{{/if}}


{{#if messages.danger}}
<div style="padding: 20px">
  <div class="alert alert-danger" role="alert">
    {{messages.danger}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
{{/if}}

{{#if messages.error}}
<div style="padding: 20px">
  <div class="alert alert-danger" role="alert">
    {{messages.error}}
    {{messages.succeed}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
{{/if}}
